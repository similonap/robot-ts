{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/lib/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "scripts/**/*",
        "tests/**/*"
    ]
}